<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroPage"
    android:background="#332186">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/Guesstimation"
            android:layout_width="398dp"
            android:layout_height="143dp"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
            android:text="  Guesstimation"
            android:textAlignment="inherit"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userNameID"
                    android:layout_width="129dp"
                    android:layout_height="37dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Enter User Name: "
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    tools:layout_editor_absoluteX="47dp"
                    tools:layout_editor_absoluteY="386dp" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sessionID"
                    android:layout_width="129dp"
                    android:layout_height="42dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Enter Session ID: "
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    tools:layout_editor_absoluteX="47dp"
                    tools:layout_editor_absoluteY="386dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter a 4 Digit Code"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#330C4E"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="onHostClick"
                    android:text="Host Game"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    tools:layout_editor_absoluteX="39dp"
                    tools:layout_editor_absoluteY="231dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#330C4E"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Join Game"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    tools:layout_editor_absoluteX="129dp"
                    tools:layout_editor_absoluteY="282dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>