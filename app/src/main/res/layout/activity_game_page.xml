<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/readyIn"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:onClick="onReadyClick"
            android:text="Ready for Round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentPoints"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="Current Points: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questionNum"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:text="Question Number:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/gameQuestion"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:text="Current Question"
            android:textSize="36sp" />

        <RadioButton
            android:id="@+id/questionAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onReadyClick"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/questionAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onReadyClick"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/questionAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onReadyClick"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/questionAnswer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onReadyClick"
            android:text="RadioButton" />

        <Button
            android:id="@+id/lockInbtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Lock In!"
            android:textSize="36sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>